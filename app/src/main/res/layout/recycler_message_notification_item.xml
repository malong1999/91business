<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
    android:id="@+id/ll_container">

    <RelativeLayout
        android:layout_width="@dimen/sz_86"
        android:layout_height="@dimen/sz_74"
        android:background="@color/gray_light">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@id/civ_head"
            android:layout_width="@dimen/sz_56"
            android:layout_height="@dimen/sz_56"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_header"
            app:civ_border="false"/>

        <View
            android:id="@+id/point"
            android:layout_width="@dimen/sz_8"
            android:layout_height="@dimen/sz_8"
            android:layout_marginLeft="@dimen/sz_66"
            android:layout_marginTop="@dimen/sz_10"
            android:background="@drawable/red_dot"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_74"
        android:background="@color/gray_light"
        >

        <TextView
            android:id="@+id/tv_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sz_24"
            tools:text="买家用户123"
            android:gravity="center_vertical"
            android:textSize="@dimen/sz_10"
            android:textColor="@color/colorTextPrimary"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sz_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sz_14"
            android:gravity="center_vertical"
            tools:text="2015-01-01"
            android:textSize="@dimen/sz_10"
            android:textColor="@color/colorTextPrimary"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/tv_message_sender"
            android:layout_marginRight="@dimen/sz_14"
            android:layout_marginBottom="@dimen/sz_4"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingLeft="@dimen/sz_10"
            android:paddingTop="@dimen/sz_4"
            android:paddingRight="@dimen/sz_40"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/sz_12"
            tools:text="卡萨丁就回复可见撒的寒风看见撒旦后付款好地方看见撒旦回复会计师大后方喀什地方"/>
    </RelativeLayout>


</LinearLayout>