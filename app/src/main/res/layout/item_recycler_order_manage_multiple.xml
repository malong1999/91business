<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sz_166"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_16"
        android:layout_gravity="center_vertical"
        android:background="@color/gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_10"
            android:text="状态：代发货"
            android:textSize="@dimen/sz_10" />

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_6"
            android:text="订单号：12345678"
            android:textSize="@dimen/sz_10" />

        <TextView
            android:id="@+id/tv_orderdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_6"
            android:maxLines="1"
            android:text="订单时间：2015/01/01"
            android:textSize="@dimen/sz_10" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/multiple_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_90"
        android:layout_marginLeft="5dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_46">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sz_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_20"
                android:text="收货人："
                android:textSize="@dimen/sz_8" />

            <TextView
                android:id="@+id/tv_consignee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三丰"
                android:textSize="@dimen/sz_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_8"
                android:text="支付金额："
                android:textSize="@dimen/sz_8" />

            <TextView
                android:id="@+id/tv_orderprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="199.00"
                android:textColor="@color/red"
                android:textSize="@dimen/sz_14" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_4"
                android:text="联系电话：13800000"
                android:textSize="@dimen/sz_8" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_contact_phone"
                android:layout_marginLeft="@dimen/sz_8"
                android:ellipsize="end"
                android:lines="1"
                android:text="邮寄地址：西牛贺州乌斯藏国新民县高老庄撒打开解放拉萨的技法卢卡斯京东方"
                android:textSize="@dimen/sz_8" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_bottom"
            android:layout_marginRight="@dimen/sz_8"
            android:gravity="right"
            android:text="详情>>"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sz_10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_16"
        android:background="@color/white" />
</LinearLayout>