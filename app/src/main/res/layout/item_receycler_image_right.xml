<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingTop="@dimen/sz_20">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/nim_message_item_image_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/sz_222"
            android:adjustViewBounds="true"
            android:background="@drawable/nim_message_right_blue_bg"
            android:padding="@dimen/sz_20"
            android:scaleType="centerInside"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/sz_40"
        android:layout_height="@dimen/sz_40"
        android:src="@mipmap/ic_launcher"/>

</LinearLayout>