<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="@dimen/sz_252"
        android:layout_height="@dimen/sz_32"
        android:layout_marginTop="@dimen/sz_24"
        android:background="@drawable/shape_login"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/sz_62"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请输入新密码"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/sz_10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="建议使用两种字符组合"
            android:paddingLeft="@dimen/sz_8"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/sz_8" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/sz_252"
        android:layout_height="@dimen/sz_32"
        android:layout_marginTop="@dimen/sz_24"
        android:background="@drawable/shape_login"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/sz_62"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/sz_10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请再次输入密码"
            android:paddingLeft="@dimen/sz_8"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/sz_8" />
    </LinearLayout>

    <Button
        android:layout_width="@dimen/sz_252"
        android:layout_height="@dimen/sz_32"
        android:layout_marginTop="@dimen/sz_50"
        android:background="@color/colorPrimary"
        android:onClick="nextStepOnClick"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/sz_16" />
</LinearLayout>
