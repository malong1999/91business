<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yhjiankang.business.ui.activity.PhoneAuthenticationActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="@dimen/sz_250"
        android:layout_height="@dimen/sz_34"
        android:orientation="horizontal"
        android:background="@drawable/shape_login"
        android:layout_marginTop="@dimen/sz_24"
        >
        <TextView
            android:layout_width="@dimen/sz_70"
            android:layout_height="match_parent"
            android:text="请输入手机号"
            android:gravity="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/sz_10"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入注册时的手机号码"
            android:background="@null"
            android:textSize="@dimen/sz_10"
            android:textColorHint="#BEBEBE"
            android:paddingLeft="@dimen/sz_8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/sz_250"
        android:layout_height="@dimen/sz_34"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/sz_20"
        android:background="@drawable/shape_login">
        <TextView
            android:layout_width="@dimen/sz_70"
            android:layout_height="match_parent"
            android:text="手机验证码"
            android:gravity="center"
            android:textSize="@dimen/sz_10"
            android:textColor="@color/colorTextPrimary"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入手机验证码 "
            android:textColorHint="#BEBEBE"
            android:background="@null"
            android:textSize="@dimen/sz_10"
            android:paddingLeft="@dimen/sz_8"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:background="#DDDDDD"
            android:textSize="@dimen/sz_12"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/sz_252"
        android:layout_height="wrap_content"
        android:text="注：每个手机号只可认证一次，请准确填写"
        android:layout_marginTop="@dimen/sz_14"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/sz_12"/>
    <Button
        android:layout_width="@dimen/sz_150"
        android:layout_height="@dimen/sz_36"
        android:text="认证"
        android:layout_marginTop="@dimen/sz_50"
        android:background="#3EB36F"
        android:textColor="@color/white"
        android:textSize="@dimen/sz_16"/>


</LinearLayout>
